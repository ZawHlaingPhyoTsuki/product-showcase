{
	"name": "server",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"build": "bun run db:generate && tsdown",
		"db:generate": "bun run --cwd ../../packages/db db:generate",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.mjs"
	},
	"dependencies": {
		"@tcl-ecommerce/auth": "workspace:*",
		"@tcl-ecommerce/db": "workspace:*",
		"@tcl-ecommerce/env": "workspace:*",
		"better-auth": "catalog:",
		"cloudinary": "^2.8.0",
		"cors": "^2.8.5",
		"dotenv": "catalog:",
		"express": "^5.1.0",
		"slugify": "^1.6.6",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@types/express": "^5.0.1",
		"@types/cors": "^2.8.17",
		"@types/bun": "catalog:",
		"typescript": "catalog:",
		"tsdown": "^0.16.5",
		"@tcl-ecommerce/config": "workspace:*"
	}
}
