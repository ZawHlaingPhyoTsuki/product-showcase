{
	"name": "tcl-ecommerce",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"@types/bun": "^1.3.4",
			"better-auth": "^1.4.9",
			"@tanstack/react-query": "^5.90.12",
			"@prisma/client": "^7.1.0",
			"@better-auth/expo": "^1.4.9"
		}
	},
	"type": "module",
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @tcl-ecommerce/db db:push",
		"db:studio": "turbo -F @tcl-ecommerce/db db:studio",
		"db:generate": "turbo -F @tcl-ecommerce/db db:generate",
		"db:migrate": "turbo -F @tcl-ecommerce/db db:migrate",
		"db:start": "turbo -F @tcl-ecommerce/db db:start",
		"db:watch": "turbo -F @tcl-ecommerce/db db:watch",
		"db:stop": "turbo -F @tcl-ecommerce/db db:stop",
		"db:down": "turbo -F @tcl-ecommerce/db db:down"
	},
	"dependencies": {
		"@tcl-ecommerce/env": "workspace:*",
		"dotenv": "catalog:",
		"next-intl": "^4.7.0",
		"zod": "catalog:"
	},
	"devDependencies": {
		"turbo": "^2.6.3",
		"@biomejs/biome": "^2.2.0",
		"typescript": "catalog:",
		"@types/bun": "catalog:",
		"@tcl-ecommerce/config": "workspace:*"
	},
	"packageManager": "bun@1.3.5"
}
