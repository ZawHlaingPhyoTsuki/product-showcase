{
	"name": "product-showcase",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5",
			"@types/bun": "^1.3.4",
			"better-auth": "^1.4.9",
			"@prisma/client": "^7.1.0"
		}
	},
	"type": "module",
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @product-showcase/db db:push",
		"db:studio": "turbo -F @product-showcase/db db:studio",
		"db:generate": "turbo -F @product-showcase/db db:generate",
		"db:migrate": "turbo -F @product-showcase/db db:migrate",
		"db:start": "turbo -F @product-showcase/db db:start",
		"db:watch": "turbo -F @product-showcase/db db:watch",
		"db:stop": "turbo -F @product-showcase/db db:stop",
		"db:down": "turbo -F @product-showcase/db db:down"
	},
	"dependencies": {
		"dotenv": "catalog:",
		"zod": "catalog:",
		"@product-showcase/env": "workspace:*"
	},
	"devDependencies": {
		"turbo": "^2.6.3",
		"@biomejs/biome": "^2.2.0",
		"typescript": "catalog:",
		"@types/bun": "catalog:",
		"@product-showcase/config": "workspace:*"
	},
	"packageManager": "bun@1.3.1"
}
